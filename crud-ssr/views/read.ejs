<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Back to Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-4">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <%if(users.length> 0){%>
                <%users.forEach((val)=>{%>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">

                        <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                            <img src="<%=val.image%>" alt="" class="w-full h-full object-cover">
                        </div>

                        <h3 class="text-xl tracking-tighter mt-3">
                            <%= val.name %>
                        </h3>
                        <h5 class="text-zinc-500">
                            <%=val.email%>
                        </h5>
                        <div class="flex gap-3 mt-10 justify-between">

                            <a href="/edit/<%=val._id%>" class="text-zinc-200">Edit User</a>
                            <a href="/delete/<%=val._id%>" class="text-red-500">Delete User</a>
                        </div>

                    </div>
                    <%})%>
                        <%} else{%>
                            <h1 class="text-zinc-500 mt-16  text-2xl">No users added.</h1>
                            <%}%>


        </div>
    </div>
</body>

</html>